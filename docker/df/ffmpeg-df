FROM ubuntu:22.04

# 更换 APT 镜像源为清华大学镜像（可选，根据你的地理位置选择更快的镜像源）
RUN sed -i 's|http://archive.ubuntu.com/ubuntu/|https://mirrors.tuna.tsinghua.edu.cn/ubuntu/|g' /etc/apt/sources.list && \
    sed -i 's|http://security.ubuntu.com/ubuntu/|https://mirrors.tuna.tsinghua.edu.cn/ubuntu/|g' /etc/apt/sources.list

# 配置 APT 以支持并行下载
RUN echo 'Acquire::Queue-Mode "access";' > /etc/apt/apt.conf.d/99parallel && \
    echo 'Acquire::http::Pipeline-Depth "200";' >> /etc/apt/apt.conf.d/99parallel && \
    echo 'Acquire::https::Pipeline-Depth "200";' >> /etc/apt/apt.conf.d/99parallel

# 安装基础依赖
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    autoconf \
    automake \
    build-essential \
    ca-certificates \
    cmake \
    git \
    libass-dev \
    libfreetype6-dev \
    libsdl2-dev \
    libtool \
    libva-dev \
    libvdpau-dev \
    libvorbis-dev \
    libxcb1-dev \
    libxcb-shm0-dev \
    libxcb-xfixes0-dev \
    pkg-config \
    texinfo \
    wget \
    zlib1g-dev \
    nasm \
    yasm \
    libx264-dev \
    libx265-dev \
    libnuma-dev \
    libvpx-dev \
    libfdk-aac-dev \
    libmp3lame-dev \
    libopus-dev \
    libxvidcore-dev \
    libssl-dev \
    libaom-dev \
    libdav1d-dev \
    libbluray-dev \
    libtheora-dev \
    libopenjp2-7-dev \
    libsoxr-dev \
    frei0r-plugins-dev \
    libvidstab-dev && \
    rm -rf /var/lib/apt/lists/* && \
    apt-get clean

# 设置工作目录
WORKDIR /tmp/ffmpeg_sources

# 编译和安装 FFmpeg
RUN git clone https://git.ffmpeg.org/ffmpeg.git ffmpeg && \
    cd ffmpeg && \
    ./configure \
    --prefix=/usr/local \
    --enable-gpl \
    --enable-libass \
    --enable-libfreetype \
    --enable-libmp3lame \
    --enable-libopus \
    --enable-libvorbis \
    --enable-libvpx \
    --enable-libx264 \
    --enable-libx265 \
    --enable-libfdk-aac \
    --enable-libxvid \
    --enable-libtheora \
    --enable-libopenjpeg \
    --enable-libbluray \
    --enable-libaom \
    --enable-libdav1d \
    --enable-libsoxr \
    --enable-frei0r \
    --enable-libvidstab \
    --enable-openssl \
    --enable-version3 \
	--enable-nonfree && \
    make -j$(nproc) && \
    make install && \
    make distclean && \
    rm -rf /tmp/ffmpeg_sources && \
    hash -r

# 验证 FFmpeg 是否正确安装
RUN ffmpeg -version
