# MySQL8 的配置文件, Linux/MacOS 系统中习惯使用 .cnf 扩展名, Windows 系统中习惯使用 .ini 扩展名


# ==============================
# 服务器配置
# ==============================
[mysqld]

# -------- 基本设置 --------
character_set_server = utf8mb4
collation_server = utf8mb4_0900_ai_ci

# 监听端口与地址
port = 3306
bind_address = 0.0.0.0

# -------- 日志设置 --------
# 慢查询日志
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 2         # 超过 2 秒视为慢查询, 默认10s
log_queries_not_using_indexes = 1  # 记录未使用索引的查询

# 主从复制配置--------主节点
server_id = 1  # 主节点id
log_bin = /var/log/mysql/mysql-bin.log
binlog_expire_logs_seconds = 604800  # 7 天过期自动清理
binlog_format = ROW  # 行格式二进制日志，更安全可靠
gtid_mode = ON
enforce_gtid_consistency = ON
log_replica_updates=ON
# 添加半同步复制插件配置
plugin_load="rpl_semi_sync_source=semisync_source.so"   
rpl_semi_sync_source_enabled=ON
rpl_semi_sync_source_timeout=10000  # 超时时间，单位毫秒
# --------------从节点配置如下: 
# server_id = 2  # 从节点id
# log_bin = /var/log/mysql/mysql-bin.log
# binlog_expire_logs_seconds = 604800  # 7 天过期自动清理
# binlog_format = ROW  # 行格式二进制日志，更安全可靠
# gtid_mode = ON
# enforce_gtid_consistency = ON
# log_replica_updates=ON
# 添加半同步复制插件配置
# read_only = ON
# super_read_only = ON
# plugin_load="rpl_semi_sync_replica=semisync_replica.so"
# rpl_semi_sync_replica_enabled=ON

# -------- 连接设置 --------
max_connections = 200       # 适当增加连接数上限
max_user_connections = 20   # 每用户最大连接数
max_connect_errors = 1000
connect_timeout = 10
wait_timeout = 600
interactive_timeout = 600
max_allowed_packet = 64M

# -------- 安全设置 --------
log_bin_trust_function_creators = 1  # MySQL 8.x 中建议启用
# secure_file_priv = "/你想要的目录路径/"   # LOAD DATA INFILE 的文件路径, 按需配置, MySQL服务器:path

# -------- InnoDB 设置 --------
innodb_buffer_pool_size = 2G        # 通常为MySQL服务器物理内存的50%-70%
innodb_log_file_size = 512M         # 增大日志文件大小提高性能
innodb_file_per_table = ON
innodb_flush_log_at_trx_commit = 1  # 保证数据安全（性能略低）
innodb_flush_method = O_DIRECT      # 避免双重缓冲
innodb_stats_on_metadata = 0        # 减少INFORMATION_SCHEMA查询对性能的影响
innodb_deadlock_detect = ON         # 死锁检测
innodb_print_all_deadlocks = 1      # 记录所有死锁信息到错误日志

# -------- 性能优化 --------
table_open_cache = 4000             # 增加打开表的缓存
thread_cache_size = 16              # 线程缓存
sort_buffer_size = 4M               # 排序缓冲区
read_buffer_size = 2M               # 读取缓冲区
read_rnd_buffer_size = 4M           # 随机读取缓冲区
join_buffer_size = 2M               # 连接缓冲区

# -------- 密码策略 --------
default_password_lifetime = 90
password_history = 6
password_reuse_interval = 180

# -------- MySQL 8.x 新特性 --------
cte_max_recursion_depth = 1000      # 公用表表达式(CTE)最大递归深度
sql_require_primary_key = ON        # 要求所有表都有主键，提高性能

# ==============================
# MySQL 命令行工具配置
# ==============================
[mysql]
default-character-set = utf8mb4
# auto-rehash = true  # 对列名和表名自动补全
prompt = '\u@\h [\d]> '

# ==============================
# 客户端通用配置
# ==============================
[client]
port = 3306
default-character-set = utf8mb4
